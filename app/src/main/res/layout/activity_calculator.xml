<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:paddingTop="?android:attr/actionBarSize"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

    <TextView
        android:id="@+id/calc_textView0"
        android:text="Power / Speed Calculator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/PapayaWhip"
        android:background="@color/MidnightBlue"
        android:textSize="24sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/calc_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speed (kmph.)" />

    <EditText
        android:id="@+id/calc_editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="24.0"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/calc_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Power (Watts)" />

    <EditText
        android:id="@+id/calc_editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="100.0"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/calc_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gradient (%)" />

    <EditText
        android:id="@+id/calc_editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="0.0"
        android:inputType="numberDecimal|numberSigned" />

    <TextView
        android:id="@+id/calc_textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wind Speed (kmph.)" />

    <EditText
        android:id="@+id/calc_editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="0.0"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/calc_textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wind Degree (from North is 0, East is 90, ...)" />

    <EditText
        android:id="@+id/calc_editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="0"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/calc_textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature (C)" />

    <EditText
        android:id="@+id/calc_editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="25"
        android:inputType="numberDecimal|numberSigned" />

    <TextView
        android:id="@+id/calc_textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elevation (meters)" />

    <EditText
        android:id="@+id/calc_editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="0"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/calc_textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bike Degree (heading North is 0, East is 90, ...)" />

    <EditText
        android:id="@+id/calc_editText8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="0"
        android:inputType="numberDecimal" />
    <TextView
        android:id="@+id/calc_textView9"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/PapayaWhip"
        android:background="@color/MidnightBlue"
        android:textSize="18sp"
        android:gravity="center_horizontal"/>

</LinearLayout>